# Use the official Percona PostgreSQL 17 image as the base
FROM percona/percona-postgresql-17:latest

# Set environment variables
ENV POSTGRES_DB=mydb
ENV POSTGRES_USER=myuser
ENV POSTGRES_PASSWORD=mypassword

# Expose the PostgreSQL port
EXPOSE 5432

# Add any additional configurations if needed
# COPY postgresql.conf /etc/postgresql/postgresql.conf

# The CMD is already set in the base image, so we don't need to specify it again
# unless we want to override it
