# Use the official Cybertec PostgreSQL image with TDE support
FROM cybertec/postgres-tde:15

# Set environment variables
ENV POSTGRES_USER=tableye_admin
ENV POSTGRES_PASSWORD=123&&Tableye*
ENV POSTGRES_DB=tableye

# Optional: Set the encryption key
# ENV POSTGRES_TDE_KEY=your_encryption_key_here

# Copy custom configuration if needed
# COPY postgresql.conf /etc/postgresql/postgresql.conf

# Expose the PostgreSQL port
EXPOSE 5432

# The default command will start PostgreSQL
CMD ["postgres"]
